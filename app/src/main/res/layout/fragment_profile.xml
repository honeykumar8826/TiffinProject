<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/spacing_16">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/spacing_16"
            android:layout_marginEnd="@dimen/spacing_16">
           <de.hdodenhof.circleimageview.CircleImageView
               android:layout_width="120dp"
               android:layout_height="120dp"
               android:layout_gravity="center"
               android:src="@mipmap/ic_launcher"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_32">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_person"
                   />
                <ImageView
                    android:id="@+id/img_edit_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_marginStart="@dimen/spacing_16"
                    android:layout_toEndOf="@id/img_person"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunny"
                    android:layout_marginStart="@dimen/spacing_16"
                    android:layout_toEndOf="@id/img_person"
                    android:textColor="@color/black_color"
                    android:layout_below="@+id/user_name"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/spacing_16"
                android:background="@color/grey_4"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_16">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_email"
                    />
                <ImageView
                    android:id="@+id/img_edit_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:layout_marginStart="@dimen/spacing_16"
                    android:layout_toEndOf="@id/img_email"/>

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunny@gmail.com"
                    android:layout_marginStart="@dimen/spacing_16"
                    android:layout_toEndOf="@id/img_email"
                    android:textColor="@color/black_color"
                    android:layout_below="@+id/user_email"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/spacing_16"
                android:background="@color/grey_4"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_16">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone"
                    />
               <!-- <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:layout_centerVertical="true"/>-->
                <TextView
                    android:id="@+id/user_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:layout_marginStart="@dimen/spacing_16"
                    android:layout_toEndOf="@id/img_phone"/>

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9999999999"
                    android:layout_marginStart="@dimen/spacing_16"
                    android:layout_toEndOf="@id/img_phone"
                    android:textColor="@color/black_color"
                    android:layout_below="@+id/user_phone"/>
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>